<body> 
    <div class="main w-full min-h-screen">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md px-5 py-2 bg-zinc-800 text-white" type="text" placeholder="Title goes here" name="title">
                <textarea class=" mt-2 block w-full rounded-md px-5 py-2 bg-zinc-800 text-white resize-none color-white" placeholder="Write your task details" name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create task">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">
            <%if(files.length > 0){%>
                <%files.forEach(function(val){%>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                <h class="text-white text-3xl tracking-tighter"><%=  val %></h1>
                    <br>
                    <div class="flex w-full justify-between mt-3">
                        <a class="text-blue-500 inline-block text-base " href="/file/<%= val %>">Read More...</a>
                        <a class="text-white text-base" href="/edit/<%= val %>">edit filename</a>
                    </div>
                
            </div>

            <%})%>

            <%}else {%>
                <h3 class="text-zinc-600">No task yet</h3>
